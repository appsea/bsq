<Page
        class="page"
        loaded="onPageLoaded"
        navigatingTo="onNavigatingTo"
        navigatedFrom="onNavigatedFrom"
        xmlns="http://schemas.nativescript.org/tns.xsd">

    <ActionBar class="action-bar">
        <NavigationButton visibility="collapsed"></NavigationButton>
        <GridLayout columns="auto,*,auto" ios:padding="0 10" height="100%" width="100%">
            <StackLayout col="0" tap="onDrawerButtonTap" id="stack" class="stack">
                <Label class="bar bar1" id="bar1" />
                <Label class="bar bar2" id="bar2" />
                <Label class="bar bar3" id="bar3" />
            </StackLayout>
            <Label col="1" class="action-bar-title" horizontalAlignment="center">
                <label.formattedText>
                    <formattedString>
                        <formattedString.spans>
                            <span text="Question " />
                            <span text="{{ questionNumber }}" />
                            <span text=" Of " />
                            <span text="{{ _state.totalQuestions }}" />
                        </formattedString.spans>
                    </formattedString>
                </label.formattedText>
            </Label>
            <StackLayout col="2" orientation="horizontal">
                <Label class="action-bar-title fa" text="&#xf044;" tap="goToEditPage"></Label>
                <Label class="{{ (question.flagged)? 'action-bar-title fa flagged': 'action-bar-title fa' }}" text="&#xf024;" tap="flag"></Label>
            </StackLayout>
        </GridLayout>
    </ActionBar>

    <DockLayout stretchLastChild="true">
        <StackLayout dock="top">
            <Label textWrap="true" class="fa timer" horizontalAlignment="center">
                <label.formattedText>
                    <formattedString>
                        <formattedString.spans>
                            <span text="&#xf017; " />
                            <span text="{{ time }}" />
                        </formattedString.spans>
                    </formattedString>
                </label.formattedText>
            </Label>
        </StackLayout>
        <StackLayout dock="bottom" visibility="{{ question? 'visible': 'collapsed' }}">
            <StackLayout class="margin" orientation="horizontal" horizontalAlignment="center">
                <Image src="~/images/map-marker-icon.png" height="45dpi" tap="showMap" margin="2dpi" width="10%" />
                <Button class="btn btn-primary btn-rounded-lg" text="Quit" tap="quit" visibility="{{ !allQuestionsAsked ? 'visible' : 'collapsed' }}" margin="2dpi" width="25%"/>
                <Button class="btn btn-primary btn-rounded-lg" text="<<" tap="previous" margin="2dpi" width="30%" />
                <Button class="btn btn-primary btn-rounded-lg" text="Ad" visibility="{{ showAdOnNext ? 'visible' : 'collapsed' }}" tap="next" margin="2dpi" width="30%"/>
                <Button class="btn btn-primary btn-rounded-lg" text=">>" visibility="{{ showAdOnNext ? 'collapsed' : 'visible' }}" tap="next" margin="2dpi" width="30%"/>
                <Button class="btn btn-primary btn-rounded-lg" text="Submit" tap="submit" visibility="{{ allQuestionsAsked ? 'visible' : 'collapsed' }}" margin="2dpi" width="25%"/>
            </StackLayout>
            <StackLayout id="banner">
            </StackLayout>
        </StackLayout>
        <ScrollView id="scrollView" onswipe="handleSwipe">
            <StackLayout class="margin">
                <Label text="{{ question.description}}" textWrap="true"/>
                <Repeater items="{{ options }}" row="1" id="optionList" class="m-t-10">
                    <Repeater.itemTemplate>
                        <GridLayout columns="auto,*" tap="selectOption" class="{{ selected ? 'selected m-y-5' : 'not-selected m-y-5' }}">
                            <Label col="0" text="{{ tag + '. ' }}"
                                   textWrap="true" class="{{ selected ? 'selected m-l-2 m-y-10' : 'not-selected m-l-2 m-y-10' }}"/>
                            <Label col="1" text="{{ description }}"
                                   textWrap="true" class="{{ selected ? 'selected m-y-10' : 'not-selected m-y-10' }}"/>
                        </GridLayout>
                    </Repeater.itemTemplate>
                </Repeater>
            </StackLayout>
        </ScrollView>
    </DockLayout>
</Page>
