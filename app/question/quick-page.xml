<Page
        class="page"
        loaded="onPageLoaded"
        navigatingTo="onNavigatingTo"
        xmlns="http://schemas.nativescript.org/tns.xsd" actionBarHidden="true">

    <GridLayout rows="auto, *" class="input-field page page-login" backgroundImage="res://mesh">
        <ScrollView row="1" horizontalAlignment="center" width="100%">
            <StackLayout orientation="vertical" horizontalAlignment="center" style="text-align:center">
                <StackLayout backgroundColor="white" margin="10" borderRadius="10" tap="calculate">
                    <Label class="h3 text-center p-10 progress-heading" text="Question Bank"
                           textWrap="true"/>
                    <Progress value="{{questionSize}}" maxValue="{{serverQuestionSize}}"
                              width="80%" loaded="onProgressLoaded" color="#07C65A"
                              class="m-t-15"/>
                    <Label class="attempted m-10" color="blue" horizontalAlignment="center">
                        <label.formattedText>
                            <formattedString>
                                <formattedString.spans>
                                    <span text="{{questionSize}}" class="attempted"/>
                                    <span text=" of " class="total"/>
                                    <span text="{{serverQuestionSize}}" class="total"/>
                                    <span text=" Accessible" class="total"/>
                                </formattedString.spans>
                            </formattedString>
                        </label.formattedText>
                    </Label>
                    <StackLayout class="hr-light" visibility="{{ isPremium ? 'collapsed' : 'visible' }}"/>
                    <Label class="m-5 t-16" color="blue" horizontalAlignment="center" text="Free Questions Loading..."
                           visibility="{{ isPremium || allQuestionsLoaded || adLoaded || error ? 'collapsed' : 'visible' }}"/>
                    <StackLayout orientation="horizontal" horizontalAlignment="center" class="m-5"
                                 visibility="{{ isPremium ? 'collapsed' : 'visible' }}">
                        <Button class="btn btn-primary btn-rounded-sm fa" text="&#xf43f;  Premium"
                                tap="{{ goPremium }}" width="48%"/>
                        <Button class="btn btn-primary btn-rounded-sm fa"
                                text="{{ '&#xf03d;  Free +' + rewards + ' Que'}}"
                                tap="{{ topUpRewards }}"
                                visibility="{{ !allQuestionsLoaded && adLoaded ? 'visible' : 'collapsed' }}"
                                width="48%"/>
                    </StackLayout>
                </StackLayout>
                <StackLayout backgroundColor="white" margin="10" borderRadius="10" tap="showProgress">
                    <Label class="h3 text-center p-10 progress-heading" text="Test Stats"
                           textWrap="true"/>
                    <Progress value="{{ mock.correct }}" maxValue="{{ mock.total }}"
                              width="80%" loaded="onProgressLoaded" color="#07C65A"
                              class="m-t-15"/>
                    <Label class="attempted m-10" horizontalAlignment="center">
                        <label.formattedText>
                            <formattedString>
                                <formattedString.spans>
                                    <span text="{{ mock.correct }}" class="attempted"/>
                                    <span text=" of " class="total"/>
                                    <span text="{{ mock.total }}" class="total"/>
                                    <span text=" Correct" class="total"/>
                                </formattedString.spans>
                            </formattedString>
                        </label.formattedText>
                    </Label>
                    <StackLayout class="hr-light"/>
                    <GridLayout columns="*,auto, *" rows="auto"
                                class="progress-background m-l-4 m-r-4" borderRadius="5">
                        <FlexboxLayout row="0" col="0" flexDirection="column"
                                       style="padding: 15 10">
                            <Label text="{{ mock.totalExams}}" class="mock-stat"/>
                            <Label text="Tests" class="mock-type"
                                   horizontalAlignment="center"/>
                        </FlexboxLayout>
                        <Label class="v-line" row="0" col="1"/>
                        <FlexboxLayout row="0" col="2" flexDirection="column"
                                       style="padding: 15 10" horizontalAlignment="center"
                                       verticalAlignment="center">
                            <Label text="{{mock.percentage}}" class="mock-stat"/>
                            <Label text="Accuracy" class="mock-type"/>
                        </FlexboxLayout>
                    </GridLayout>
                </StackLayout>
                <Button text="Start Quick Test!!" class="progress-heading btn m-t-10" tap="startQuickTest"/>
            </StackLayout>
        </ScrollView>
        <GridLayout row="0" columns="auto,*" class="m-r-30 actionbar" width="100%">
            <StackLayout col="0" tap="onDrawerButtonTap" id="stack" class="stack">
                <StackLayout class="m-10" style="margin-left: 25;">
                    <Label class="bar bar1" id="bar1"/>
                    <Label class="bar bar2" id="bar2"/>
                    <Label class="bar bar3" id="bar3"/>
                </StackLayout>
            </StackLayout>
            <Label col="1" color="white" text="Quick Test" class="header-title"/>
        </GridLayout>
    </GridLayout>

</Page>