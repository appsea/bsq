<Page
        class="page"
        loaded="onPageLoaded"
        navigatingTo="onNavigatingTo"
        navigatedFrom="onNavigatedFrom"
        xmlns="http://schemas.nativescript.org/tns.xsd">

    <ActionBar class="action-bar">
        <NavigationButton visibility="collapsed"></NavigationButton>
        <GridLayout columns="auto,*" ios:padding="0 10" height="100%" width="100%">
            <StackLayout col="0" tap="onDrawerButtonTap" id="stack" class="stack">
                <Label class="bar bar1" id="bar1" />
                <Label class="bar bar2" id="bar2" />
                <Label class="bar bar3" id="bar3" />
            </StackLayout>
            <Label col="1" class="action-bar-title" text="Search Questions"></Label>
        </GridLayout>
    </ActionBar>

    <GridLayout rows="auto, *, auto">
        <SearchBar row="0" hint="Search Questions..." id="searchBar" text="{{ searchPhrase }}" submit="{{ onSearchSubmit }}" clear="{{ clear }}" class="{{ searching ? 'searching search-bar' : 'not-searching search-bar' }}" visibility="{{ searching ? 'visible': 'collapsed'}}"/>
        <GridLayout row="1" rows="auto, *">
            <ListView  row="1" id="listView" class="margin" items="{{ questions }}" separatorColor="blue" itemTemplateSelector="$index">
                <ListView.itemTemplate>
                    <StackLayout>
                        <Label marginTop="20dpi" textAlignment="center" class="font-weight-bold">
                            <Label.formattedText>
                                <FormattedString>
                                    <FormattedString.spans>
                                        <span text="Question " />
                                        <span text="{{ $index + 1 }}"/>
                                        <span text=" Of "/>
                                        <span text="{{$parents['ListView'].questions, $parents['ListView'].questions.length }}" />
                                    </FormattedString.spans>
                                </FormattedString>
                            </Label.formattedText>
                        </Label>
                        <Label text="{{ description }}" textWrap="true"/>

                        <Repeater items="{{ options }}" row="1">
                            <Repeater.itemTemplate>
                                <GridLayout columns="*" class="{{ correct ? 'correct m-y-5': 'not-selected m-y-5'}}">
                                    <Label col="0" text="{{ description }}" class="{{ correct ? 'correct m-y-10': 'not-selected m-y-10'}}" textWrap="true"/>
                                </GridLayout>
                            </Repeater.itemTemplate>
                        </Repeater>
                        <Label text="Explanation: " style="font-weight: bold; margin-top: 10dpi"  textWrap="true" visibility="{{ explanation ? 'visible' : 'collapsed' }}"/>
                        <Label text="{{ explanation }}" textWrap="true" visibility="{{ explanation ? 'visible' : 'collapsed' }}"/>
                    </StackLayout>
                </ListView.itemTemplate>
            </ListView>
            <Label textWrap="true" textAlignment="center" marginTop="20dpi" row="1" visibility="{{ questions.length === 0 && searchPhrase.length > 0 ? 'visible' : 'collapsed' }}" class="margin" horizontalAlignment="center" verticalAlignment="center">
                <label.formattedText>
                    <formattedString>
                        <formattedString.spans>
                            <span text="No Questions matched"/>
                        </formattedString.spans>
                    </formattedString>
                </label.formattedText>
            </Label>
            <Label textWrap="true" textAlignment="center" marginTop="20dpi" row="1" visibility="{{ questions.length === 0 && searchPhrase.length === 0 ? 'visible' : 'collapsed' }}" class="margin" horizontalAlignment="center" verticalAlignment="center">
                <label.formattedText>
                    <formattedString>
                        <formattedString.spans>
                            <span text="Enter atleast three characters"/>
                        </formattedString.spans>
                    </formattedString>
                </label.formattedText>
            </Label>
        </GridLayout>
    </GridLayout>
</Page>